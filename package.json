{
  "name": "react-frontend-assessment",
  "version": "0.0.1",
  "description": "Software Mind - React frontend assessment.",
  "scripts": {
    "dev": "concurrently -k -s first \"npm run mock-api\" \"wait-on http://localhost:3001 && npm run next:dev\"",
    "next:dev": "next dev",
    "build": "next build",
    "start": "next start",
    "mock-api": "json-server --watch src/mocks/db.json --port 3001",
    "lint": "eslint \"**/*.{ts,tsx}\"",
    "lint:fix": "eslint \"**/*.{ts,tsx}\" --fix",
    "lint:file": "eslint --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:file": "prettier --write",
    "lint:format": "npm run lint:fix && npm run format",
    "lint:format:file": "npm run lint:file && npm run format:file"
  },
  "repository": {
    "type": "git",
    "url": "git+https://git.number8.com/jorge.silva/react-frontend-assessment"
  },
  "author": "Jorge Mauricio - Full Stack Web Developer",
  "license": "ISC",
  "bugs": {
    "url": "https://git.number8.com/jorge.silva/react-frontend-assessment"
  },
  "homepage": "https://git.number8.com/jorge.silva/react-frontend-assessment#readme",
  "dependencies": {
    "next": "^15.0.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "@types/react": "^18.3.13",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.17.0",
    "@typescript-eslint/parser": "^8.17.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-next": "^15.0.3",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "json-server": "^1.0.0-beta.3",
    "postcss": "^8.4.49",
    "prettier": "^3.4.2",
    "sass": "^1.82.0",
    "tailwindcss": "^3.4.16",
    "typescript": "^5.7.2",
    "wait-on": "^8.0.1"
  }
}
